@model RegisterModel


@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
<h1>Register</h1>

<form asp-controller="Account" asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="@Model.Username"></label>
        <input class="form-control w-50" placeholder="Username" asp-for="@Model.Username" />
        <span class="text-danger" asp-validation-for="@Model.Username"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Password"></label>
        <input type="password" asp-for="@Model.Password" class="form-control w-50" placeholder="Password" />
        <span class="text-danger" asp-validation-for="@Model.Password"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.ConfirmPassword"></label>
        <input type="password" asp-for="@Model.ConfirmPassword" class="form-control w-50" placeholder="Reenter Password" />
        <span class="text-danger" asp-validation-for="@Model.ConfirmPassword"></span>
    </div>

    <button class="btn btn-primary">Register</button>
</form>

</div>