@model LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
<h1>Login</h1>

<form asp-controller="Account" asp-action="Login" method="post">
    <div class="form-group">
        <label asp-for="@Model.Username"></label>
        <input class="form-control w-50" asp-for="@Model.Username" placeholder="Username" />
        <span asp-validation-for="@Model.Username"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Password"></label>
        <input class="form-control w-50" type="password" asp-for="@Model.Password" placeholder="Password" />
        <span asp-validation-for="@Model.Password"></span>
    </div>

    @if (ViewData.ContainsKey("ErrorMessage") && string.IsNullOrEmpty((string)ViewData["ErrorMessage"]) == false)
    {
        <div class="alert alert-danger w-50">
            @ViewData["ErrorMessage"]
        </div>
    }

    <button class="btn btn-primary">Login</button>

</form>

</div>